<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/actbgcolor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".05"
            android:orientation="vertical" >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/actbgcolor" >

                <!--android:background="#960505"-->

                <CheckBox
                    android:id="@+id/cb_spo2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SPO2"
                    android:textColor="#fff"
                    android:checked="false"
                    android:button="@drawable/cbcustom_spo2"
                    />

                <CheckBox
                    android:id="@+id/cb_fc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Frec. Cardiaca"
                    android:textColor="#fff"
                    android:checked="false"
                    android:button="@drawable/cbcustom_fc"
                    />

                <CheckBox
                    android:id="@+id/cb_ta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tensión Arterial"
                    android:textColor="#fff"
                    android:checked="false"
                    android:button="@drawable/cbcustom_ta"
                    />

                <CheckBox
                    android:id="@+id/cb_fr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Frec. Respiratoria"
                    android:textColor="#fff"
                    android:checked="false"
                    android:button="@drawable/cbcustom_fr"
                    />

                <CheckBox
                    android:id="@+id/cb_tc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Temp. Corporal"
                    android:textColor="#fff"
                    android:checked="false"
                    android:button="@drawable/cbcustom_tc"
                    />

            </LinearLayout>




        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".8"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".08"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="#000"
                    android:orientation="vertical">

                    <com.jjoe64.graphview.GraphView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/plotview" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".92"
                    android:background="@color/actbgcolor"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tvY"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Y-Axis"
                        android:textSize="14dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:visibility="visible"
                        />



                    <TextView
                        android:id="@+id/vd_tc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0000"
                        android:textColor="@color/color_tc"
                        android:textAlignment="center"
                        android:layout_marginTop="10dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        />

                    <TextView
                        android:id="@+id/vd_fr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0000"
                        android:textColor="@color/color_fr"
                        android:textAlignment="center"
                        android:layout_marginTop="10dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        />

                    <TextView
                        android:id="@+id/vd_ta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="0000"
                        android:textAlignment="center"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/color_ta" />

                    <TextView
                        android:id="@+id/vd_fc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0000"
                        android:textColor="@color/color_fc"
                        android:textAlignment="center"
                        android:layout_marginTop="10dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        />

                    <TextView
                        android:id="@+id/vd_spo2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0000"
                        android:textColor="@color/color_spo2"
                        android:textAlignment="center"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        />

                    <TextView
                        android:id="@+id/tvAlarm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Alarm"
                        android:textSize="14dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:visibility="visible"
                        android:layout_marginTop="15dp"
                        />

                    <TextView
                        android:id="@+id/vd_alarma"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#95F723"
                        android:textSize="40dp"
                        android:textAlignment="center"
                        android:layout_marginTop="5dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".05"
            android:orientation="horizontal">

            <Switch
                android:id="@+id/swLogEn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/plotview"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="5dp"
                android:checked="false"
                android:text="Stream data  "
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="15dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="X-Axis:  "
                android:id="@+id/textView2"
                android:gravity="center"
                android:textColor="@color/colorAccent"
                android:layout_below="@+id/plotview"
                android:layout_toRightOf="@+id/swLogEn"
                android:layout_toEndOf="@+id/swLogEn"
                android:layout_alignBottom="@+id/swLogEn"
                android:visibility="gone"/>

            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="0.000"
                android:id="@+id/txtXval"
                android:gravity="center"
                android:textColor="@color/colorAccent"
                android:layout_alignTop="@+id/textView2"
                android:layout_toRightOf="@+id/textView2"
                android:layout_toEndOf="@+id/textView2"
                android:layout_alignBottom="@+id/textView2"
                android:visibility="gone"
                />

            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="  Y-Axis:  "
                android:id="@+id/textView3"
                android:gravity="center"
                android:textColor="@color/colorAccent"
                android:layout_alignTop="@+id/txtXval"
                android:layout_centerHorizontal="true"
                android:layout_alignBottom="@+id/txtXval"
                android:visibility="gone"/>

            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="1.00"
                android:id="@+id/txtYval"
                android:gravity="center"
                android:textColor="@color/colorAccent"
                android:layout_below="@+id/plotview"
                android:layout_toRightOf="@+id/textView3"
                android:layout_toEndOf="@+id/textView3"
                android:layout_alignBottom="@+id/textView3"
                android:visibility="gone"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" | "
                android:textColor="@color/color_ta"
                />

            <TextView
                android:id="@+id/tvTrama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="X-Axis: 0"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:visibility="visible"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" | "
                android:textColor="@color/color_ta"
                />

            <CheckBox
                android:id="@+id/cb_legends"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Leyenda"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:textStyle="bold"
                android:button="@drawable/cbcustom_down"
                />
            <!--android:gravity="center"-->


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  | "
                android:textColor="@color/color_ta"
                />

            <CheckBox
                android:id="@+id/cb_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Control Datos"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:textStyle="bold"
                android:button="@drawable/cbcustom_down"
                />
            <CheckBox
                android:id="@+id/cb_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text=""
                android:textColor="@color/white"
                android:textSize="16dp"
                android:textStyle="bold"
                android:button="@drawable/estilopersonalizadocb"
                />
            <!--
            app:buttonTint="@color/color_spo2"
            android:theme="@style/CheckBox"        //No me funcionó.
            -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" | "
                android:textColor="@color/color_ta"
                />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>