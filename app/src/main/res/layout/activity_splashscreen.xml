<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#266496"
    android:orientation="vertical"
    tools:context=".Splashscreen">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="HOSPITAL NACIONAL SANTA TERESA\nZACATECOLUCA, LA PAZ\n\nEl Salvador"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginTop="0dp"
            android:textColor="#fff"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="APP BIOMEDIC IOT\n2019-2020\n"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="14dp"
            />

        <ImageView
            android:id="@+id/imgView_logo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/logohospital1" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Loading..."
            android:textAlignment="center"
            />

        <ProgressBar
            android:id="@+id/progressbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:tooltipText="Loading..."
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:progressTint="#FFFFFF"
            android:progressBackgroundTint="#FFEB3B"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            />

        <!-- android:indeterminateDrawable="@drawable/custom_progress"-->
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Investigador Desarrollador"
            android:textStyle="bold"
            android:textSize="18dp"
            android:textColor="#FFC107"
            android:fontFamily="cursive"
            android:gravity="center"
       />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Manuel de Jesús Gámez López."
            android:textStyle="bold"
            android:textSize="18dp"
            android:textColor="#FFC107"
            android:fontFamily="cursive"
            android:gravity="center"
           />

    </LinearLayout>


</LinearLayout>