<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:background="@android:color/transparent"
    android:gravity="center" >

    <!--<ImageView
        android:id="@+id/BtnCerrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_close1"
        android:layout_marginTop="7dp"
        android:layout_marginRight="7dp"
        android:elevation="5dp"
        android:layout_alignParentRight="true"
        android:background="#6c706b" />-->
    <!--android:background="@drawable/cerclebackground"-->

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="25dp"
        app:cardBackgroundColor="@color/colorToolBar"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="0dp"
                android:background="@android:color/transparent"
                android:layout_marginBottom="25dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorToolBar"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"

                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight=".10"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:background="@android:color/transparent"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Configuración Alertas"
                            android:fontFamily="cursive"
                            android:textAlignment="center"
                            android:textSize="24dp"
                            android:textStyle="bold"
                            android:textColor="#ffffff"
                            android:background="@android:color/transparent"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight=".90"
                        android:layout_gravity="center"
                        android:gravity="right"
                        android:orientation="vertical"
                        android:layout_marginRight="0dp"
                        >

                        <ImageView
                            android:id="@+id/BtnCerrar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_close4"
                            android:layout_marginRight="7dp"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/circulo2" />

                    </LinearLayout>

                </LinearLayout>






                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="#FFFFFF" >











                        <androidx.cardview.widget.CardView
                            xmlns:card_view="http://schemas.android.com/apk/res-auto"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            card_view:cardUseCompatPadding="true"
                            card_view:cardElevation="5dp"
                            card_view:cardCornerRadius="3dp"
                            android:layout_margin="0dp">

                            <LinearLayout
                                android:id="@+id/linearLayout3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="6dp"
                                android:gravity="center"
                                android:background="#E7EAEB" >

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="0dp"
                                    android:layout_marginLeft="0dp"
                                    android:background="#7E2205"
                                    android:gravity="center" >

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/ic_details"/>

                                    <TextView
                                        android:id="@+id/tvInfo3"
                                        android:textColor="@color/white"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Parámetros de Variables Biométricas"
                                        android:padding="5dp"
                                        />

                                </LinearLayout>


                                <TextView
                                    android:id="@+id/tv_tel"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="@android:style/TextAppearance"
                                    android:text="Sensor de Oximetría"
                                    android:layout_marginTop="5dp"
                                    android:textColor="@color/black"
                                    android:textSize="14dp"
                                    android:textStyle="bold"
                                    />


                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/tiTelefono"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginRight="15dp"
                                    android:textColorHint="@color/grey"
                                    >

                                <EditText
                                    android:id="@+id/et_tel1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:visibility="visible"
                                    android:hint="SpO2: 0.0"
                                    android:textSize="14dp"
                                    android:inputType="number"
                                    android:textAlignment="center"
                                    android:textColor="@color/blue"
                                    android:drawablePadding="5dp"
                                    android:paddingLeft="1dp"
                                    android:drawableStart="@drawable/spo2_ico2"
                                    android:ems="10"
                                    />

                                </com.google.android.material.textfield.TextInputLayout>


                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/tiEmail"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginRight="15dp"
                                    android:textColorHint="@color/grey">

                                <EditText
                                    android:id="@+id/et_email1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:visibility="visible"
                                    android:hint="Pulso: 0.0"
                                    android:textSize="14dp"
                                    android:inputType="number"
                                    android:textAlignment="center"
                                    android:textColor="@color/blue"
                                    android:drawablePadding="5dp"
                                    android:paddingLeft="1dp"
                                    android:drawableStart="@drawable/spo2_ico2"
                                    android:ems="10"
                                    />

                                </com.google.android.material.textfield.TextInputLayout>




                                 <TextView
                                    android:id="@+id/tv_fr"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="@android:style/TextAppearance"
                                    android:text="Sensor de Frecuencia Respiratoria"
                                    android:layout_marginTop="5dp"
                                    android:textColor="@color/black"
                                    android:textSize="14dp"
                                    android:textStyle="bold"
                                    />


                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/tis2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginRight="15dp"
                                    android:textColorHint="@color/grey">

                                    <EditText
                                        android:id="@+id/et_fr"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:visibility="visible"
                                        android:hint="Value: 0.0"
                                        android:textSize="14dp"
                                        android:inputType="number"
                                        android:textAlignment="center"
                                        android:textColor="@color/blue"
                                        android:drawablePadding="5dp"
                                        android:paddingLeft="1dp"
                                        android:drawableStart="@drawable/fr_ico"
                                        android:ems="10"
                                        />

                                </com.google.android.material.textfield.TextInputLayout>


                                <TextView
                                    android:id="@+id/tv_tc"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="@android:style/TextAppearance"
                                    android:text="Sensor de Temperatura Corporal"
                                    android:layout_marginTop="5dp"
                                    android:textColor="@color/black"
                                    android:textSize="14dp"
                                    android:textStyle="bold"
                                    />

                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/tis3"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginRight="15dp"
                                    android:textColorHint="@color/grey">

                                    <EditText
                                        android:id="@+id/et_tc"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:visibility="visible"
                                        android:hint="Value °C: 0.0"
                                        android:textSize="14dp"
                                        android:inputType="number"
                                        android:textAlignment="center"
                                        android:textColor="@color/blue"
                                        android:drawablePadding="5dp"
                                        android:paddingLeft="1dp"
                                        android:drawableStart="@drawable/temperature_ico"
                                        android:ems="10"
                                        />

                                </com.google.android.material.textfield.TextInputLayout>



                                <TextView
                                    android:id="@+id/tv_ta"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="@android:style/TextAppearance"
                                    android:text="Sensor de Tensión/Presión Arterial"
                                    android:layout_marginTop="5dp"
                                    android:textColor="@color/black"
                                    android:textSize="14dp"
                                    android:textStyle="bold"
                                    />

                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/tis4_0"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginRight="15dp"
                                    android:textColorHint="@color/grey">

                                    <EditText
                                        android:id="@+id/et_Diastolic"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:visibility="visible"
                                        android:hint="Diastolic: 0.0"
                                        android:textSize="14dp"
                                        android:inputType="number"
                                        android:textAlignment="center"
                                        android:textColor="@color/blue"
                                        android:drawablePadding="5dp"
                                        android:paddingLeft="1dp"
                                        android:drawableStart="@drawable/tension_ico"
                                        android:ems="10"
                                        />

                                </com.google.android.material.textfield.TextInputLayout>


                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/tis4_1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginRight="15dp"
                                    android:textColorHint="@color/grey">

                                    <EditText
                                        android:id="@+id/et_Systolic"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:visibility="visible"
                                        android:hint="Systolic: 0.0"
                                        android:textSize="14dp"
                                        android:inputType="number"
                                        android:textAlignment="center"
                                        android:textColor="@color/blue"
                                        android:drawablePadding="5dp"
                                        android:paddingLeft="1dp"
                                        android:drawableStart="@drawable/tension_ico"
                                        android:ems="10"
                                        />

                                </com.google.android.material.textfield.TextInputLayout>


                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/tis4_2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginRight="15dp"
                                    android:textColorHint="@color/grey">

                                    <EditText
                                        android:id="@+id/et_Pulse_min"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:visibility="visible"
                                        android:hint="Pulse/min: 0.0"
                                        android:textSize="14dp"
                                        android:inputType="number"
                                        android:textAlignment="center"
                                        android:drawablePadding="5dp"
                                        android:paddingLeft="1dp"
                                        android:drawableStart="@drawable/tension_ico"
                                        android:ems="10"

                                        />

                                </com.google.android.material.textfield.TextInputLayout>






                                <LinearLayout
                                    android:id="@+id/ll_gr1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:visibility="visible"
                                    android:layout_marginTop="25dp"
                                    android:layout_marginBottom="10dp"
                                    >

                                    <Button
                                        android:id="@+id/btnGuardo"
                                        style="@style/Widget.AppCompat.Button.Borderless.Colored"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight=".7"
                                        android:text="Guardar Configuración"
                                        android:textColor="@color/red"
                                        />

                                    <Button
                                        style="@style/Widget.AppCompat.Button.Borderless.Colored"
                                        android:layout_width="0dp"
                                        android:layout_weight=".3"
                                        android:layout_height="wrap_content"
                                        android:text="Cerrar"
                                        android:id="@+id/btnClose"
                                        android:textColor="@color/red"
                                        />

                                </LinearLayout>
                            </LinearLayout>


                        </androidx.cardview.widget.CardView>












                        <!--<TextView
                            android:id="@+id/tv_encabezado1"
                            android:layout_marginTop="10dp"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="..."
                            android:visibility="visible"
                            android:textAlignment="center"
                            android:background="#FFFFFF"
                            android:textSize="12dp"
                            android:textStyle="bold"
                            android:paddingRight="10dp"
                            android:paddingLeft="10dp"
                            android:layout_marginBottom="10dp"
                            />-->


                        <TextView
                            android:id="@+id/tv_directorioPortal"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="10dp"
                            android:textColor="#3F3F3E"
                            android:text="Directorio Portal Web: "
                            android:textStyle="bold"
                            android:visibility="gone" />


                    </LinearLayout>


                </ScrollView>


            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>