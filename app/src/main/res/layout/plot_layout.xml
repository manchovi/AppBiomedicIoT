<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/actbgcolor" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".05"
            android:orientation="vertical" >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#960505">

            <CheckBox
                android:id="@+id/cb_spo2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SPO2"
                android:textColor="#fff"
                android:background="#8B2424"
                />

                <CheckBox
                    android:id="@+id/cb_fc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Frec. Cardiaca"
                    android:textColor="#fff"
                    />

                <CheckBox
                    android:id="@+id/cb_ta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TensiÃ³n Arterial"
                    android:textColor="#fff"
                    />

                <CheckBox
                    android:id="@+id/cb_fr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Frec. Respiratoria"
                    android:textColor="#fff"
                    />

                <CheckBox
                    android:id="@+id/cb_tc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Temp. Corporal"
                    android:textColor="#fff"
                    />

            </LinearLayout>




        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".8"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".08"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="#000"
                    android:orientation="vertical">

                    <com.jjoe64.graphview.GraphView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/plotview" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".92"
                    android:background="@color/actbgcolor"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/vd_spo2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0000"
                        android:textColor="#fff"
                        android:textAlignment="center"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        />

                    <TextView
                        android:id="@+id/vd_fc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0000"
                        android:textColor="#fff"
                        android:textAlignment="center"
                        android:layout_marginTop="10dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        />

                    <TextView
                        android:id="@+id/vd_ta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="0000"
                        android:textAlignment="center"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#fff" />

                    <TextView
                        android:id="@+id/vd_fr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0000"
                        android:textColor="#fff"
                        android:textAlignment="center"
                        android:layout_marginTop="10dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        />

                    <TextView
                        android:id="@+id/vd_tc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0000"
                        android:textColor="#fff"
                        android:textAlignment="center"
                        android:layout_marginTop="10dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        />

                    <TextView
                        android:id="@+id/vd_alarma"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#fff"
                        android:textSize="20dp"
                        android:textAlignment="center"
                        android:layout_marginTop="10dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".05"
            android:orientation="horizontal">

            <Switch
                android:id="@+id/swLogEn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/plotview"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:checked="false"
                android:text="Stream data  "
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textSize="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="X-Axis:  "
                android:id="@+id/textView2"
                android:gravity="center"
                android:textColor="@color/colorAccent"
                android:layout_below="@+id/plotview"
                android:layout_toRightOf="@+id/swLogEn"
                android:layout_toEndOf="@+id/swLogEn"
                android:layout_alignBottom="@+id/swLogEn"
                android:visibility="gone"/>

            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="0.000"
                android:id="@+id/txtXval"
                android:gravity="center"
                android:textColor="@color/colorAccent"
                android:layout_alignTop="@+id/textView2"
                android:layout_toRightOf="@+id/textView2"
                android:layout_toEndOf="@+id/textView2"
                android:layout_alignBottom="@+id/textView2"
                android:visibility="gone"
                />

            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="  Y-Axis:  "
                android:id="@+id/textView3"
                android:gravity="center"
                android:textColor="@color/colorAccent"
                android:layout_alignTop="@+id/txtXval"
                android:layout_centerHorizontal="true"
                android:layout_alignBottom="@+id/txtXval"
                android:visibility="gone"/>

            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="1.00"
                android:id="@+id/txtYval"
                android:gravity="center"
                android:textColor="@color/colorAccent"
                android:layout_below="@+id/plotview"
                android:layout_toRightOf="@+id/textView3"
                android:layout_toEndOf="@+id/textView3"
                android:layout_alignBottom="@+id/textView3"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tvTrama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Trama: "
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:visibility="visible"
                 />
            <!--android:gravity="center"-->

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>